{
  "name": "webpodify",
  "version": "1.0.0",
  "description": "Convert any webpage to a 2-person podcast-style conversation",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.content.config.js",
    "preview": "vite preview",
    "website:dev": "cd website && npm run dev",
    "website:deploy": "cd website && vercel --prod --yes"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@xenova/transformers": "^2.17.2",
    "@mozilla/readability": "^0.4.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.1.0",
    "vite-plugin-static-copy": "^1.0.4"
  }
}
